@model Instructore
@{
    ViewData["Title"] = "add";
    SelectList coursesOP = new SelectList(ViewBag.Courses,"ID","Name");
    SelectList depatmentsOP = new SelectList(ViewBag.Departments, "Id", "Name");

}


<form asp-controller="Instructore" asp-action="saveIns" method="post">
    <div class="">
        <label for="Name">Name</label>
        <input type="text" name="Name" id="Name" value="@Model?.Name" class="form form-control" />
    </div>

    <div class="">
        <label for="Name">Salary</label>
        <input type="text" name="salary" id="Name" value="@Model?.salary" class="form form-control" />
    </div>

    <div class="">
        <label for="Name">Address</label>
        <input type="text" name="address" id="Name" value="@Model?.address" class="form form-control" />
    </div>


    <div class="">
        <label for="Name">grade</label>
        <input type="text" name="grade" id="Name" value="@Model?.grade" class="form form-control" />
    </div>


    <div class="">
        <label asp-for="dept_id"></label>
        <select asp-for="dept_id" asp-items="depatmentsOP">

        </select>
    </div>


    <div class="">
        <label asp-for="crs_id"></label>
        <select asp-for="crs_id" asp-items="coursesOP">
        @*     @foreach (var item in ViewBag.Courses)
            {
                <option value="@item?.ID">@item.Name</option>
            } *@
        </select>
    </div>
    <input type="submit" class="btn btn-success" value="Create" />
