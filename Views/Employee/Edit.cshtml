@model AdvProject.Models.Employee

@{
    ViewData["Title"] = "Edit Employee";
}

<h2>Edit Employee</h2>


<h1>
    @ViewBag.co
</h1>

<form method="post" action="/Employee/SaveEdit/@Model.Id">
    <div asp-validation-summary="All"></div>
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" value="@Model.Name" id="Name" name="Name" class="form-control" />
        <span></spa>
    </div>

    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" value="@Model.Adrress" id="Adrress" name="Adrress" class="form-control" />
    </div>

    <div class="form-group">
        <label for="ImageURL">Image URL</label>
        <img src="/Image/@Model.ImageURL" width="40px"class="img" />
        <input type="text" value="@Model.ImageURL" id="ImageURL" name="ImageURL" class="form-control" />
    </div>

    <div class="form-group">
        <label for="JobTitle">Job Title</label>
        <input type="text" value="@Model.JobTitle" id="JobTitle" name="JobTitle" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Salary">Salary</label>
        <input type="number" value="@Model.Salary" id="Salary" name="Salary" class="form-control" />
    </div>




    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="inputGroupSelect01">Options</label>
        </div>
        <select class="custom-select" id="inputGroupSelect01" name="DepartmentID">
            @foreach (var item in ViewBag.departments)
            {

                <option class="form-control" value="@item.Id" selected="@(Model.DepartmentID == item.Id ? "selected" : null)">@item.Name</option>


            }
        </select>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/Employee/Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>